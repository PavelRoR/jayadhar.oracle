@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#main
		background-position: top right
		padding 100px 0
	.main-title span
		font-size: 24px
	.video-wrapper-main
		max-width 650px
		margin-top: 40px
	.form-main
		padding 15px 15px 15px 0
	.input
		max-width 330px
	.button-form
		max-width:  260px
	.mail-container-title:after
		top calc(100% - 78px)
		right 40px
	.modal-dialog
		width 730px
	.author-img
		margin-left: 100px
	.form-last
		max-width 730px
@media screen and (max-width 1199px)
	.mail-container-title::after
		right 10px
	.input-mail
		float: none
		margin 0 auto 2px
	.button-form
		float: none
		margin 0 auto
	.for-text
		min-height 140px
	#get
		background-position: center top
@media screen and (max-width 991px)
	header
		padding 10px 0
	#logo
		width: 100px;
		height: 42px;
		background-position: center
		display block
		float: none
		margin 0 auto 5px
	.contacts
		float: none
		text-align: center
		line-height: 16px;
	.contact
		margin 5px 5px 0
		display: inline-block
		line-height: 16px
	.mail-container-title
		line-height: 1.6
	// .checking .check-label
	// 	line-height: 15px
	#for
		padding-top: 40px
	.for-text
	.day-info
		min-height 140px
	.for-img
		display: none
	#get
		background-image url('../img/backs/get-bg-mobile.png')
	.author-img
		width 220px
		height 220px
	.carousel-control
		top auto
		bottom: 15px
		height 30px
		width 30px
	.switch-title
	.switch-text
		text-align: center
	.switch-title
		&:after
			content none
@media screen and (max-width 767px)
	#main
		padding 40px 0
	.main-title
		margin 20px 0 30px
	.mail-container
		border-left: 2px solid #d8e2e0
		padding 20px
		margin-left: 0
		&:before
			content none
		&-title
			text-align: center
			margin-left: 0
			margin-bottom: 10px
			&:after
				content: 'â¤‹'
				position: static
				line-height: 30px
	.checking .check-label
		line-height: 27px
	.form-main
		padding 0
	.for-pre-title
		text-align: center
	.general-title-for
		margin-top: 40px
	.for-pre-title
		font-size: 34px
	.for-text
		min-height 1px
		padding-left: 15px
		margin-bottom: 20px
		&:last-of-type
			margin-bottom: 20px
	.for-text.for-text-single
		padding-left: 0
		padding-top: 10px
		margin: 10px 0 0
		border-left: 0
		border-top: 3px solid #d8b976
		text-align: center
	.button-for
		margin-top: 30px
	#for
		padding 40px 0
	#plan
		padding 40px 0
		background-color: #DBE2DF
		background-image: none
	.day
		margin-bottom: 25px
	.day-subtitle
		margin-bottom: 20px
	.day-info
		min-height 1px
	.button-plan
		margin-top: 50px
	.get-list li
		margin-bottom: 15px
		min-height 55px
	#get
		padding 40px 0
		margin-top: 0
	#author
	#last
		padding 40px 0
		background-color: #DBE2DF
		background-image: none
		margin-top: 0
	.author-img
		margin-bottom: 30px
	#revs
		padding 40px 0
		margin-top: 0
	.carousel-inner > .item > a > .revs-img
		height 100px
		object-fit: cover
	.form-last
		padding 20px
	.last-form-title
		margin-bottom: 15px
	// .checking .check-label
	// 	line-height: 15px
	footer
		padding 15px 0
@media screen and (max-width 485px)
	header
		padding 10px 0
		margin-bottom: 0
	.contact
		line-height: 14px
		font-size: 12px
		padding-left: 17px
		background-size: 14px
	.main-title
		font-size: 36px
		margin-bottom: 20px
	.general-title
		font-size: 26px
		margin-bottom: 30px
		&-for
			margin-top: 35px
	.button-for
		margin-top: 20px
	.day-title
		font-size: 40px
		line-height: 40px
		margin-bottom: 5px
	.day-info
	.author-list li, .day-list li
		padding-left: 15px
	.button-plan
		margin-top: 40px
	.author-img
		margin 0 auto 30px
	.author-name
		text-align: center
		margin-bottom: 20px
	.author-text
		margin-top: 20px
		padding-top: 20px
	.last-subtitle
		margin 20px 0
	.last-form-title
		font-size: 24px
	footer
		font-size: 12px
	.checking .check-label
		line-height: 15px
@media screen and (max-width 385px)
	#main
	#for
	#plan
	#get
	#author
	#revs
	#last
		padding 30px 0
	.pre
		font-size: 16px
	.main-title
		font-size: 30px
		margin 10px 0 15px
		line-height: 1.2
		span
			font-size: 20px
			margin-top: 5px
	.main-info
		margin-bottom: 10px
	.mail-container-title
	.modal-title
		line-height 1.3
		margin-bottom: 15px
	.politics_modal-content .modal-title
		font-size: 20px
		line-height: 1.2
	.for-pre-title
		font-size: 28px
	.button-for
		height auto
		padding 8px 10px
		line-height: 1.2
	.day-title
		font-size: 35px
		line-height: 30px
	.general-title
		margin-bottom: 24px
	.author-text
		text-align: center
	.form-last
	.mail-container
		padding 10px