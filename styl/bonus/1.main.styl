#main
	padding 30px 0 60px
	background-image url('../img/backs/for-bg.png')
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	text-align: center
.pre
	font-size: 20px
	font-family: OSSB
.main-title
	font-size: 44px
	font-family: J
	line-height: 38px
	margin 20px 0
	span
		font-size: 22px
		display block
		margin-top: 10px
.main-info
	margin-bottom: 15px
	span
		font-family: OSSB
		color #0a1938
		display: inline-block
		&.date-span
			color #af7e00
.video-wrapper-main
	max-width 560px
	box-shadow: 0 0 5px 2px rgba(#000,.3)
#main.remind
	min-height calc(100vh - 224px)
.remind-main-title
	margin 90px 0 40px
	a
		display: inline-block
		text-decoration: underline
		color #e3a300
		&:focus
			color #e3a300
			text-decoration: none
		&:hover
			color #e3a300
			text-decoration: none
.remind-main-subtitle
	font-size: 26px
	font-family: OSSB