@import '../css/_css/bootstrap.min.css'

*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: OS
	background-color #fff
	color #2a251d
a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display block
	margin 0 auto
	border 4px outset rgb(216, 190, 123);
	background-color: rgb(216, 190, 123);
	width 100%
	max-width: 365px;
	height: 46px;
	line-height: 36px;
	text-decoration: none
	text-align: center
	transition: all .5s ease
	position relative
	z-index 99
	&:focus
		color initial 
		text-decoration: none
	&:hover
		color initial 
		text-decoration: none
		background-color: rgb(216, 190, 123) - 15%
		transform: translateY(-2px)
	&-form
		color #fff
		font-family: J
		font-size: 24px
		background-color: #568DCB
		border: none
		max-width 223px
		height 36px
		line-height 36px
		&:focus
			color #fff
		&:hover
			color #fff
			background-color: #568DCB - 15%
.general-title
	text-align: center
	font-size: 36px;
	font-family: J
	text-decoration: underline;
	line-height: 0.833;
	margin-bottom: 50px
	position relative
	z-index 99
	span
		text-decoration: none
		color #d1a430
		display: inline-block

